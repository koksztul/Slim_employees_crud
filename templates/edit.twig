{{ include("partials/header.twig") }}
<div class="container pt-5 mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2>Edit Employee</h2>
            <br>
            {% if successMessage is not empty %}
            <div class="alert alert-success" role="alert">
                {{ successMessage }}
            </div>
            {% endif %}
            <form id="employeeForm" method="post" action="{{ path_for('employees.update', { 'id': employee.id }) }}">
                <input type="hidden" name="_METHOD" value="PUT">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" value="{{ employee.name }}" type="text" class="form-control" id="name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="surname">Surname</label>
                    <input name="surname" value="{{ employee.surname }}" type="text" class="form-control" id="surname" placeholder="Enter Surname">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input name="address" value="{{ employee.address }}" type="text" class="form-control" id="address" placeholder="Address">
                </div>
                <div class="form-group">
                    <label for="pesel">Pesel</label>
                    <input name="pesel" value="{{ employee.pesel }}" type="text" class="form-control" id="pesel" placeholder="Pesel">
                </div>
                {% if errorMsg is not empty %}
                    <div class="alert alert-danger" role="alert">
                        {{ errorMsg }}
                    </div>
                {% endif %}
                <button type="button" id="submitForm" class="btn btn-primary">Update</button>
            </form>

        </div>
    </div>
</div>
{{ include("partials/footer.twig") }}
<script src="{{ base_url() }}//vendor/js/employeesForm.js"></script>